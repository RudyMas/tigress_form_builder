{% block title %}{{ trans('forms', translations_e_250612)}} - {{ actionButton }}{% endblock %}
{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-sm-12">
            <nav aria-label="breadcrumb" data-bs-theme="dark">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ BASE_URL }}/"><i class="fa fa-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="{{ BASE_URL }}/forms">{{ trans('forms', translations_e_250612)}}</a></li>
                    <li class="breadcrumb-item active">{{ actionButton }}</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h3>{{ trans('forms', translations_e_250612) }} - {{ actionButton }}</h3>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-12">
                <form action="{{ BASE_URL }}/forms/save" method="post" enctype="multipart/form-data"
                      accept-charset="UTF-8" id="editForm">
                    <fieldset>
                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <input type="hidden" name="id" value="{{ form.id }}">
                                <label for="name" class="form-label"><b>{{ trans('form_name', translations_e_250612) }}</b></label>
                                <input type="text" class="form-control" id="name" name="name"
                                       placeholder="{{ trans('form_name', translations_e_250612) }}" value="{{ form.name }}" required>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <label for="type_id" class="form-label"><b>{{ trans('screen_type', translations_e_250612) }}</b></label>
                                <select class="form-control" id="type_id" name="type_id" required>
                                    <option value="">{{ trans('choose_screen_type', translations_e_250612) }}</option>
                                    <option value="1" {% if form.type_id == 1 %}selected{% endif %}>{{ trans('mobile', translations_e_250612) }}</option>
                                    <option value="2" {% if form.type_id == 2 %}selected{% endif %}>{{ trans('desktop', translations_e_250612) }}</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <label for="form_reference" class="form-label"><b>{{ trans('form_reference', translations_e_250612) }}</b></label>
                                <input type="text" class="form-control" id="form_reference" name="form_reference"
                                       placeholder="{{ trans('form_reference_placeholder', translations_e_250612) }}" value="{{ form.form_reference }}">
                            </div>
                            <div class="col-sm-3">
                                <label for="tile_id" class="form-label"><b>{{ trans('link_tile', translations_e_250612) }}</b></label>
                                <select class="form-control" id="tile_id" name="tile_id" required>
                                    <option value="0">{{ trans('not_linked', translations_e_250612) }}</option>
                                    {% for tile in tiles %}
                                        <option value="{{ tile.id }}" {% if form.tile_id == tile.id %}selected{% endif %}>
                                            {{ tile.tile_name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success" id="save_form"><i class="fa fa-save"></i>
                                {{ actionButton }}
                            </button>
                            <a href="javascript:history.back()" class="btn btn-danger"><i class="fa fa-times"></i>
                                {{ trans('cancel', translations_e_250612) }}</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}